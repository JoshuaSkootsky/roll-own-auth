{
  "name": "roll-own-auth",
  "module": "server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "PORT=4040 bun run server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:clean": "rm -f test_db.sqlite",
    "test:ci": "bun test --coverage --reporter=junit --reporter-outfile=test-results.xml",
    "check": "bun run tsc --noEmit",
    "build": "bun run tsc"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4.2.1"
  }
}
